@{
    Page.Title = "Route Map - Big Blue Bus GTFS Service";
    Layout = "_layout.cshtml";
    var route_short_name = UrlData[0];
}

@section head{
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script src="/route-map.js"></script>
    <script>
        $(function () {
            createRouteMap('', '@route_short_name', true);
        });
    </script>
}

<table>
    <tr><td><label for="route-map-schedule">Schedule:</label>&nbsp;</td><td><select id="route-map-schedule"></select></td></tr>
    <tr><td><label for="route-map-day-of-week">Day of Week:</label>&nbsp;</td><td><select id="route-map-day-of-week"></select></td></tr>
    <tr><td><label for="route-map-direction">Direction:</label>&nbsp;</td><td><select id="route-map-direction"></select></td></tr>
</table>
<div id="route-map" style="width: 100%; height: 600px;"></div>
